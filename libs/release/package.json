{
  "name": "@famiglio/release",
  "version": "0.0.1",
  "private": false,
  "description": "A modular release automation toolkit that detects and executes repository release workflows across Nx, Lerna, Release-It, and custom strategies.",
  "keywords": [
    "release",
    "automation",
    "nx",
    "lerna",
    "release-it",
    "monorepo",
    "ci",
    "cd",
    "github",
    "famiglio"
  ],
  "homepage": "https://github.com/famiglio/famiglio#readme",
  "bugs": {
    "url": "https://github.com/famiglio/famiglio/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/famiglio/famiglio",
    "directory": "libs/release"
  },
  "license": "MIT",
  "type": "module",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./flavors": {
      "types": "./dist/flavors/index.d.ts",
      "import": "./dist/flavors/index.js",
      "default": "./dist/flavors/index.js"
    },
    "./types": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/types/index.js",
      "default": "./dist/types/index.js"
    },
    "./errors": {
      "types": "./dist/errors/index.d.ts",
      "import": "./dist/errors/index.js",
      "default": "./dist/errors/index.js"
    }
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "LICENSE"
  ],
  "dependencies": {
    "@famiglio/core": "^0.0.1",
    "tslib": "^2.3.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/node": "^24.7.0",
    "tsdown": "^0.15.6",
    "typescript": "^5.6.3"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "nx": {
    "name": "release",
    "targets": {
      "build": {
        "executor": "nx:run-commands",
        "inputs": [
          "production"
        ],
        "outputs": [
          "{projectRoot}/dist"
        ],
        "options": {
          "cwd": "{projectRoot}",
          "parallel": false,
          "commands": [
            "tsdown",
            "tsc -p tsconfig.lib.json"
          ]
        }
      },
      "watch": {
        "executor": "nx:run-commands",
        "inputs": [
          "default"
        ],
        "options": {
          "cwd": "{projectRoot}",
          "commands": [
            "tsdown --watch"
          ]
        }
      }
    }
  }
}
