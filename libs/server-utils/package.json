{
  "name": "@famiglio/server-utils",
  "version": "0.0.1",
  "private": true,
  "description": "Famiglio server utilities",
  "keywords": [
    "famiglio",
    "server",
    "utils",
    "utilities",
    "express",
    "node",
    "backend",
    "logger",
    "pino",
    "pino-pretty"
  ],
  "homepage": "https://github.com/famiglio/famiglio#readme",
  "bugs": {
    "url": "https://github.com/famiglio/famiglio/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/famiglio/famiglio"
  },
  "license": "MIT",
  "type": "module",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "@famiglio/source": "./src/index.ts",
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./logger": {
      "types": "./dist/logger/index.d.ts",
      "import": "./dist/logger/index.js",
      "default": "./dist/logger/index.js"
    }
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "LICENSE"
  ],
  "dependencies": {
    "@famiglio/core": "^0.0.1",
    "@famiglio/errors": "^0.0.1",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.2",
    "tslib": "^2.3.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/node": "^24.7.2",
    "tsdown": "^0.15.8",
    "typescript": "^5.9.3"
  },
  "nx": {
    "name": "server-utils",
    "tags": [
      "type:lib",
      "scope:backend",
      "lib:server-utils"
    ],
    "targets": {
      "build": {
        "executor": "nx:run-commands",
        "inputs": [
          "production"
        ],
        "outputs": [
          "{projectRoot}/dist"
        ],
        "options": {
          "cwd": "{projectRoot}",
          "parallel": false,
          "commands": [
            "tsdown",
            "tsc -p tsconfig.lib.json"
          ]
        },
        "dependsOn": [
          {
            "projects": [
              "errors",
              "core"
            ],
            "target": "build",
            "params": "forward"
          }
        ]
      },
      "watch": {
        "executor": "nx:run-commands",
        "inputs": [
          "default"
        ],
        "options": {
          "cwd": "{projectRoot}",
          "commands": [
            "tsdown --watch"
          ]
        }
      }
    }
  }
}
