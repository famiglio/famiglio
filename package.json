{
  "name": "@famiglio/source",
  "version": "0.0.0",
  "private": true,
  "description": "famiglio â€” release orchestrator and GitHub App for automated releases",
  "keywords": [
    "nx",
    "release",
    "github",
    "automation",
    "github-app"
  ],
  "homepage": "https://github.com/famiglio/famiglio#readme",
  "bugs": {
    "url": "https://github.com/famiglio/famiglio/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/famiglio/famiglio"
  },
  "license": "MIT",
  "workspaces": [
    "apps/*",
    "libs/*"
  ],
  "scripts": {
    "build": "nx run-many -t build",
    "commit": "cz",
    "fmt:check": "prettier . --check",
    "fmt:fix": "prettier . --write",
    "lint:check": "eslint .",
    "lint:fix": "eslint --fix .",
    "lint:fmt": "npm run lint:fix && npm run fmt:fix",
    "nx:agents": "nx configure-ai-agents",
    "nx:agents:check": "nx configure-ai-agents --check",
    "nx:agents:upgrade": "nx configure-ai-agents --agents codex gemini",
    "nx:daemon:start": "nx daemon --start",
    "nx:migrate": "nx migrate --run-migrations=migrations.json --if-exists && npm install",
    "nx:repair": "nx repair",
    "nx:reset": "nx reset",
    "nx:sync": "nx sync",
    "nx:upgrade": "nx migrate latest",
    "prepare": "lefthook install"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-git"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@cspell/cspell-types": "^9.2.1",
    "@cspell/eslint-plugin": "^9.2.1",
    "@eslint/js": "^9.37.0",
    "@eslint/json": "^0.13.2",
    "@eslint/markdown": "^7.4.0",
    "@famiglio/core": "^0.0.1",
    "@famiglio/errors": "^0.0.1",
    "@nx/js": "21.6.4",
    "@nx/node": "21.6.4",
    "@nx/web": "21.6.4",
    "@nx/webpack": "21.6.4",
    "@nx/workspace": "21.6.4",
    "@octokit/auth-app": "^8.1.1",
    "@octokit/rest": "^22.0.0",
    "@pmmmwh/react-refresh-webpack-plugin": "^0.6.1",
    "@svgr/webpack": "^8.0.1",
    "@swc-node/register": "^1.11.1",
    "@swc/core": "^1.13.5",
    "@swc/helpers": "^0.5.17",
    "@types/express": "^5.0.3",
    "@types/node": "^24.7.0",
    "commitizen": "^4.3.1",
    "cspell": "^9.2.1",
    "cz-git": "^1.12.0",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsdoc": "^61.1.1",
    "eslint-plugin-node-dependencies": "^1.2.0",
    "eslint-plugin-package-json": "^0.56.3",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-unicorn": "^61.0.2",
    "express": "^5.1.0",
    "globals": "^16.4.0",
    "jsonc-eslint-parser": "^2.4.1",
    "lefthook": "^1.13.6",
    "nx": "21.6.4",
    "pino": "^10.0.0",
    "pino-pretty": "^13.1.2",
    "prettier": "^3.6.2",
    "prettier-plugin-ini": "^1.3.0",
    "prettier-plugin-packagejson": "^2.5.19",
    "prettier-plugin-prisma": "^5.0.0",
    "prettier-plugin-properties": "^0.3.0",
    "prettier-plugin-sh": "^0.18.0",
    "prettier-plugin-toml": "^2.0.6",
    "react-refresh": "^0.18.0",
    "tsdown": "^0.15.8",
    "tslib": "^2.3.0",
    "typescript": "~5.9.2",
    "typescript-eslint": "^8.46.0",
    "webpack-cli": "^6.0.1",
    "zod": "^4.1.12"
  }
}
